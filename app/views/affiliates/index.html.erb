			<script>

				var cur_category = 0;
				var searchval = '';

				String.prototype.contains = function(search) {
					if (this.toLowerCase().indexOf(search.toLowerCase()) >= 0)
						return true;
					return false;
				}

				function hideInvalidAff() {
					$('.affiliate').each(function(index, affiliate) {
						dump($(this).attr('class') + '\n');
						dump(String(cur_category) + '\n');
						if ($(this).attr('id').contains(searchval) && ($(this).attr('class').contains('cat' + String(cur_category) + '-')) || cur_category == 0) {
							$(this).toggle(true);
							} else {
								$(this).toggle(false);
							}
					});
				}

				$('input#affsearch').keyup(function(el) {
					searchval = this.value;
					hideInvalidAff();
				});

				$('#sel').change(function(el) {
					$('#sel option:selected').each(function() {
						cur_category = $(this).attr('value');
						hideInvalidAff();
					});
				});
